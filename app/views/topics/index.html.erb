<h1>Listing Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= pluralize(topic.votes.size,"vote") %></td>
        <td><%= button_to '+1', upvote_topic_path(topic), method: :post, class: "btn btn-primary btn-xs"%></td>
        <td><%= button_to '-1', downvote_topic_path(topic), method: :post, class: "btn btn-warning btn-xs"%></td>
        <td><%= link_to 'delete', topic_path(topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Topic', new_topic_path %>
<br>
<%= link_to("About",about_topics_path ) %>
